{
    "version": 2,
    "builds": [
        {
            "src": "server/index.js",
            "use": "@vercel/node",
            "config": {
                "includeFiles": ["server/public/**"]
            }
        }
    ],
    "rewrites": [
        {
            "source": "/(.*)",
            "destination": "/server/index.js"
        }
    ]
}
